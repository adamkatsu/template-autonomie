<div class="container container-full home-section-two-cont no-padding">
  <div href="#" class="home-section-half">
    <img src="https://cdn.shopify.com/s/files/1/0625/6263/1749/files/home_2_1.webp?v=1731811475" alt="" class="bg-full">
    <div class="home-section-half-wrapper">
      <div class="home-section-title items-center">
        {% if section.settings.product_one %}
          {% assign product_one = all_products[section.settings.product_one] %}
          <a href="{{ product_one.url }}" class="home-btn items-center">
            <span class="txt-400 fs-14 cl-white-50 uppercase">{{ section.settings.product_one_text }}</span>
            <span class="txt-500 fs-20 cl-white">{{ product_one.title }}</span>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div href="#" class="home-section-half">
    <img src="https://cdn.shopify.com/s/files/1/0625/6263/1749/files/home_2_2.webp?v=1731811474" alt="" class="bg-full">
    <div class="home-section-half-wrapper">
      <div class="home-section-title items-center">
        {% if section.settings.product_two %}
          {% assign product_two = all_products[section.settings.product_two] %}
          <a href="{{ product_two.url }}" class="home-btn items-center">
            <span class="txt-400 fs-14 cl-white-50 uppercase">{{ section.settings.product_two_text }}</span>
            <span class="txt-500 fs-20 cl-white">{{ product_two.title }}</span>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Home Section Two",
    "tag": "section",
    "class": "home-section-two section-full",
    "settings": [
      {
        "type": "product",
        "id": "product_one",
        "label": "Product One"
      },
      {
        "type": "text",
        "id": "product_one_text",
        "label": "Product One Title",
        "default": "Lorem Ipsum"
      },
      {
        "type": "product",
        "id": "product_two",
        "label": "Product Two"
      },
      {
        "type": "text",
        "id": "product_two_text",
        "label": "Product Two Title",
        "default": "Lorem Ipsum"
      }
    ],
    "blocks": [
    ]
  }
  {% endschema %}