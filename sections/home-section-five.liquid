<div class="container container-full home-section-five-cont">
  <img src="{{ section.settings.background_image |  image_url: width: 1920 }}" alt="" class="bg-full">
  <div class="home-section-title items-center">
    {% if section.settings.product_one %}
      {% assign product_one = all_products[section.settings.product_one] %}
      <a href="{{ product_one.url }}" class="home-btn items-center">
        <span class="txt-400 fs-14 cl-white-50 uppercase">{{ section.settings.product_one_text }}</span>
        <span class="txt-500 fs-20 cl-white">{{ product_one.title }}</span>
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Home Section Five",
    "tag": "section",
    "class": "home-section-five section-full",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "product",
        "id": "product_one",
        "label": "Product One"
      },
      {
        "type": "text",
        "id": "product_one_text",
        "label": "Product One Title",
        "default": "Lorem Ipsum"
      }
    ],
    "blocks": [
    ]
  }
  {% endschema %}